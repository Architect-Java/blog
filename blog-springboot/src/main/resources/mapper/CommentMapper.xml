<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zrkizzy.blog.mapper.CommentMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zrkizzy.blog.entity.Comment">
        <id column="id" property="id" />
        <result column="content" property="content" />
        <result column="nick_name" property="nickName" />
        <result column="parent_id" property="parentId" />
        <result column="comment_time" property="commentTime" />
        <result column="allow" property="allow" />
        <result column="ip_address" property="ipAddress" />
        <result column="ip_source" property="ipSource" />
        <result column="article_id" property="articleId" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, content, nick_name, parent_id, comment_time, allow, ip_address, ip_source, article_id
    </sql>

    <!-- 评论数据 -->
    <resultMap id="Comments" type="com.zrkizzy.blog.dto.CommentDTO" extends="BaseResultMap">
        <collection property="children" ofType="com.zrkizzy.blog.entity.Comment">
            <id column="id2" property="id" />
            <result column="content2" property="content" />
            <result column="nick_name2" property="nickName" />
            <result column="parent_id2" property="parentId" />
            <result column="comment_time2" property="commentTime" />
            <result column="allow2" property="allow" />
            <result column="ip_address2" property="ipAddress" />
            <result column="ip_source2" property="ipSource" />
            <result column="article_id" property="articleId" />
        </collection>
    </resultMap>

</mapper>
